<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        >
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layoutDirection="rtl"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="35dp"
                android:text="اجیل"
                android:textColor="@color/brown"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/shabnam"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:text="مشاهده ی همه... "
                android:textStyle="bold"
                android:textColor="#039BE5" />



            <RelativeLayout
                android:id="@+id/nuts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layoutDirection="rtl">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclearviewCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/recyclearBG"
                    >


                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:text="مشاهده ی همه... "
                    android:layout_alignParentLeft="true"
                    android:textColor="#039BE5"
                    android:layout_below="@id/recyclearviewCategory"
                    />



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fruits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nuts"
                android:layout_marginTop="30dp"
                android:layoutDirection="rtl">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rexyclearChoclate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/recyclearBG"
                    >


                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rexyclearChoclate"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:text="مشاهده ی همه... "
                    android:textColor="#039BE5"
                    />



            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nuts"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/shabnam"
                android:text="شکلات"
                android:textColor="@color/brown"
                android:textSize="15dp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fruits"
                android:layout_marginStart="12dp"
                android:text="میوه خشک"
                android:textColor="@color/brown"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/shabnam"
                android:layoutDirection="rtl"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fruits"
                android:layout_marginTop="30dp"
                android:layoutDirection="rtl">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclearFruits"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/recyclearBG"
                    >


                </androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>


        </RelativeLayout>



    </androidx.core.widget.NestedScrollView>



</RelativeLayout>